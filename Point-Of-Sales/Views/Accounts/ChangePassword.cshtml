@model Point_Of_Sales.Entities.Account

@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex  justify-content-center mt-5">
    <div class="card row flex-row justify-content-center" style="width: 500px">
        <div class="col-md-6">
            <h4 class="text-center py-1" style="color: darkslateblue">Change Password</h4>
            <h6 class="text-center py-1" style="color: lightslategray">@Model.Employee.Fullname</h6>
            <form asp-action="ChangePassword" method="post" class="w-100 mx-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="control-label">Current password</label>
                    <input name="CurPwd" class="form-control" />

                </div>
                <div class="form-group">
                    <label class="control-label">New password</label>
                    <input name="NewPwd" class="form-control" />

                </div>
                <div class="form-group">
                    <label class="control-label">Confirm new password</label>
                    <input name="Confirm" class="form-control" />
                </div>

                <div class="form-group text-danger text-center" style="font-size: 14px">
                    @(TempData["Message"] ?? "")
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary w-100" style="background-color: darkslateblue" />
                </div>
            </form>
        </div>
    </div>
</div>




@{
    var Name = User.Identity.Name ?? "N/A";
    var IsAdmin = User.IsInRole("Admin");
}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a href="/" class="nav-link">
                    <img src="/images/logo.png" width="20px" />
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">Sales</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Purchases" class="nav-link">Purchases</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Management
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a asp-controller="Products" asp-action="Index" class="dropdown-item">Products</a>
                    @if (IsAdmin)
                    {
                        <a asp-controller="Accounts" asp-action="Index" class="dropdown-item">Accounts</a>
                        <a asp-controller="RetailStores" asp-action="Index" class="dropdown-item">Retail Stores</a>
                    }
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item">Profile</a>
                    <a class="dropdown-item">Change Password</a>
                    <a class="dropdown-item" href="/Auth/Logout">Logout</a>
                </div>
            </li>
        </ul>
    </div>
    <div class="form-inline">
        <input id="searchInput" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button onclick="handleSearch()" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </div>
</nav>

@section Scripts{
    <script>
        await function handleSearch() {
            const value = document.querySelector("#searchInput").ariaValueMax

            if (value) {
                return;
            }

            await fetch("/products/search?q=" + value, {
                method: "GET"
            }).then(async (res) => {
                const data = await res.json();

                console.log(data.products)

            }).catch(err => {
                console.log(err)
            })

        }
    </script>
}
@model IEnumerable<Point_Of_Sales.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>List Products</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.Barcode)
                </th>
                <th>
                    Product Name
                    @*@Html.DisplayNameFor(model => model.Product_Name)*@
                </th>
                <th>
                    Import Price
                    @*@Html.DisplayNameFor(model => model.Import_Price)*@
                </th>
                <th>
                    Retail Price
                    @*@Html.DisplayNameFor(model => model.Retail_Price)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="data-@item.Id" class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Barcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Name)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Import_Price)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Retail_Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary mr-2">Edit</a>*@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mr-2">Details</a>
                        @*<a asp-action="Delete" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger mr-2">Delete</a>*@
                        <button onclick="handleDelete(this)" data-id="@item.Id" class="btn btn-danger mr-2">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script>
        async function handleDelete(button) {
            const { id } = button.dataset;

            if (confirm("Do you want to delete this product?")) {
                const result = await fetch("/Products/Delete/" + id, { method: "POST" })
                if(result.ok){
                    alert("Delete successfully! 😏");
                    document.querySelector(`#data-${id}`).remove();
                }
            } else {
                return;
            }

        }
    </script>
}
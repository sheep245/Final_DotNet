@model Point_Of_Sales.Entities.RetailStore

@{
    ViewData["Title"] = "Create Retail Store";
}


<a asp-action="Index" class="btn mt-2 ml-3" style="color: #69a297"><i><u>Back to List</u></i></a>
<div class="container" style="display:flex; justify-content: center; padding-top: 4%">
    <div class="card row flex-row justify-content-around" style="width: 500px">
        <div class="row justify-content-center mt-2">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h4 style="text-align:center; color: #55828b">Retail Store</h4>
                    <div class="form-group mt-4">
                        <label asp-for="RetailStoreID" class="control-label"></label>
                        <input asp-for="RetailStoreID" class="form-control" />
                        <span asp-validation-for="RetailStoreID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn text-white w-100" style="background-color:#55828b" />
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

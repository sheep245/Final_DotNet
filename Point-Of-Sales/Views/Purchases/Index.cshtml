@model IEnumerable<Point_Of_Sales.Entities.Purchase>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.purchaseId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total_Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Received_Money)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paid_Back)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date_Of_Purchase)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.purchaseId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total_Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Received_Money)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paid_Back)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_Of_Purchase)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

